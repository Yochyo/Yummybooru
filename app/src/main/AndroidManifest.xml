<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.yochyo.ybooru">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".layout.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".layout.PreviewActivity"
                android:label="@string/title_activity_preview"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".layout.PictureActivity"
                android:label="@string/title_activity_picture"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".layout.SubscriptionActivity"
                android:label="@string/title_activity_subscription"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".layout.SettingsActivity"
                android:label="@string/title_activity_settings">
        </activity>
    </application>

</manifest>